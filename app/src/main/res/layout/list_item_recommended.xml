<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            >

        <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_recommended"
                android:layout_width="155dp"
                android:layout_height="135dp"
                android:background="#3F51B5"
                android:scaleType="fitXY"
                app:riv_corner_radius="20dp"
                app:riv_mutate_background="true"/>

        <TextView
                android:id="@+id/txt_nameSong"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_recommended"
                android:layout_marginTop="5dp"
                android:hint="Lá Xa Lìa Cành"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="14sp"
                android:gravity="center"/>

        <TextView
                android:id="@+id/txt_nameSinger"
                android:layout_below="@id/txt_nameSong"
                android:gravity="center"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:hint="Lê Bảo Bình"
                android:textColorHint="#42DDFF"
                android:textColor="#42DDFF"
                android:textSize="10sp"
                android:textStyle="bold"/>
    </RelativeLayout>

</RelativeLayout>