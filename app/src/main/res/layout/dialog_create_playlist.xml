<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/curve_shap"
    app:cardCornerRadius="@dimen/_20sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:padding="@dimen/_15sdp">

        <TextView
            android:id="@+id/mTVTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Tạo playlist"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mTVLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@id/mTVTitle"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="#000" />

        <EditText
            android:id="@+id/mETNameList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mTVLine"
            android:layout_marginBottom="@dimen/_5sdp"
            android:hint="Nhập tên của Playlist"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/mTVOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mETNameList"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/_10sdp"
            android:text="ĐỒNG Ý"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mTVCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mETNameList"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_toLeftOf="@id/mTVOK"
            android:padding="@dimen/_10sdp"
            android:text="BỎ QUA"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>